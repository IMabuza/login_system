<body>

<div class="login-form">
  <h2>Login Form</h2>
  <form method="POST" action="/login">
        <input id="email_input" type="email" name="email" title="email" placeholder="Email"/>
        <input id="password_input" type="password" name="password" title="password" placeholder="Password" />
     <p id="message">{{message}}</p>
    <p id="success">{{loggedin}}</p>
    <button type="submit" class="btn">Sign In</button>
    <a class="forgot" href="#">Lost Your Password?</a>
  </form>
</div>

  </body>
